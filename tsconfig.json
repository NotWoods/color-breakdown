{
    "include": ["./src/**/*"],
    "compilerOptions": {
        /* Basic Options */
        "target": "es2018",
        "module": "esnext",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "lib",
        "importHelpers": true,
        "pretty": true,
        "lib": ["webworker", "dom", "es2015", "es2017.object"],
        "skipLibCheck": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true
    }
}
