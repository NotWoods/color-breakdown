{
    "name": "color-breakdown",
    "version": "2.0.0",
    "description": "Extract prominent colors from an image with this PWA tool",
    "main": "index.js",
    "private": true,
    "scripts": {
        "test": "jest",
        "copy-scripts": "cp node_modules/pwacompat/pwacompat.min.js public/lib/pwacompat",
        "build": "rollup -c",
        "lint:js": "prettier \"src/**/*.ts\" --parser typescript",
        "lint:css": "prettier \"public/css/**/*.css\" --parser css",
        "lint": "tsc --noEmit && npm run lint:js -- --write && npm run lint:css -- --write",
        "lint:check": "tsc --noEmit && npm run lint:js -- --list-different && npm run lint:css -- --list-different",
        "serve": "cd public && http-server"
    },
    "author": "Tiger Oakes",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^23.3.10",
        "http-server": "^0.11.1",
        "idb": "^2.1.3",
        "jest": "^23.6.0",
        "prettier": "^1.11.1",
        "pwacompat": "^2.0.7",
        "rollup": "^0.68.2",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-node-resolve": "^4.0.0",
        "rollup-plugin-replace": "^2.1.0",
        "rollup-plugin-terser": "^3.0.0",
        "rollup-plugin-typescript": "^1.0.0",
        "ts-jest": "^23.10.5",
        "tslib": "^1.9.3",
        "typescript": "^3.2.2"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
}
