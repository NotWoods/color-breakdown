{
    "name": "color-breakdown",
    "version": "2.0.0",
    "description": "Extract prominent colors from an image with this PWA tool",
    "private": true,
    "scripts": {
        "test": "jest",
        "copy-scripts": "cp node_modules/pwacompat/pwacompat.min.js public/lib/pwacompat.js && cp node_modules/shimport/index.js public/lib/shimport.js",
        "build": "git rev-parse HEAD > .commithash && rollup -c",
        "lint:files": "prettier \"src/**/*.ts\" \"public/css/**/*.css\" \"public/*.html\"",
        "lint": "tsc && npm run lint:files -- --write",
        "lint:check": "tsc && npm run lint:files -- --check",
        "start": "cd public && http-server"
    },
    "author": "Tiger Oakes <contact@tigeroakes.com> (https://tigeroakes.com)",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.12",
        "http-server": "^0.11.1",
        "husky": "^2.1.0",
        "idb": "^4.0.3",
        "jest": "^24.7.1",
        "node-vibrant": "^3.0.0",
        "prettier": "^1.17.0",
        "pwacompat": "^2.0.8",
        "rollup": "^1.10.1",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-terser": "^4.0.4",
        "rollup-plugin-typescript": "^1.0.1",
        "shimport": "0.0.14",
        "ts-jest": "^24.0.2",
        "tslib": "^1.9.3",
        "typescript": "^3.4.5"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "setupFiles": [
            "<rootDir>/src/tests/setup-mock-dom.ts"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
}
